# accept ssh connections
ACCEPT net $FW tcp ssh

<% node[:shorewall][:rules].each do |name, rule| %>
# <%= name %>
<%= [ :action, :source, :dest, :proto, :destport, :sourceport ].map { |a| rule[a] }.join(" ") %>
<% end %>


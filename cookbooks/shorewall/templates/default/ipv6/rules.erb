#SECTION ESTABLISHED
#SECTION RELATED
SECTION NEW

# accept important icmp stuff
AllowICMPs $FW net
AllowICMPs net $FW

# allow ping
Ping(ACCEPT) $FW net
Ping(ACCEPT) net $FW

# accept ssh connections
ACCEPT net $FW tcp ssh

<% node[:shorewall][:rules6].each do |name, rule| %>
# <%= name %>
<%= [ :action, :source, :dest, :proto, :destport, :sourceport ].map { |a| rule[a] }.join(" ") %>
<% end %>

